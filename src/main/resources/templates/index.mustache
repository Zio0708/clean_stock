            <tr>
                <th>자산 이름</th>
                <th>보유 수량</th>
                <th>평균 단가</th>
                <th>현재가</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#receipt}}
                <tr>
                    <td>{{stockName}}</td>
                    <td>{{stockCnt}}</td>
                    <td>{{stockAvr}}</td>
                    <td>{{stockPrice}}</td>
                </tr>
            {{/receipt}}
            </tbody>
        </table>
        {{^receipt}}
            <div class="no-receipt">자산이 존재하지 않습니다</div>
        {{/receipt}}
        </div>
    </div>
</div>
