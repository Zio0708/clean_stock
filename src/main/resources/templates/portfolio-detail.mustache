{{>layout/header}}


<div class="col-md-12">
    <div class="row">
        <div class="col-md-12">
            #{{portfolio.id}} {{portfolio.name}} 포트폴리오
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>자산 이름</th>
            <th>보유 수량</th>
            <th>평균 단가</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#receipt}}
            <tr>
                <td>자산 이름</td>
                <td>{{stockCnt}}</td>
                <td>{{stockAvr}}</td>
            </tr>
        {{/receipt}}
        </tbody>
    </table>
    {{^receipt}}
        <h4>자산이 존재하지 않습니다</h4>
    {{/receipt}}
    <a href="/receipt/save/portfolio_id/{{portfolio.id}}" role="button" class="btn btn-primary">
        자산 등록
    </a>
    <button type = "button" class = "btn btn-primary" id ="portfolio-update">수정</button>
    <button type = "button" class = "btn btn-danger" id ="portfolio-delete">삭제</button>
</div>

{{>layout/footer}}