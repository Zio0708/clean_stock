{{>layout/header}}

    <div class="col-md-12">
        <h1>자산 수정</h1>
        <div class="col-md-12">
            <form>
                <div class = "form-group">
                    <input type = "hidden" class = "form-control" id ="portfolio_id" value="{{portfolio_id}}" readonly>
                    <form>
                        <div class = "form-group">
                            <div>
                            <input type = "text" class="form-control" id="stockWord" placeholder="자산명 또는 티커를 입력하세요.">
                            </div>
                            <table class="table table-horizontal table-bordered">
                                <thead class="thead-strong">
                                <tr>
                                    <th>티커</th>
                                    <th>종목명</th>
                                    <th>현재가</th>
                                </tr>
                                </thead>
                                <tbody id="stockList">
                                </tbody>
                            </table>
                        </div>
                    </form>
                    <input type = "hidden" class = "form-control" id ="receiptId" value={{receipt.id}}>
                    <input type = "text" class = "form-control" id ="stockName"  value ={{receipt.stockName}} readonly>
                    <input type = "text" class = "form-control" id ="stockTicker"  value={{receipt.stockTicker}} readonly>
                    <input type = "text" class = "form-control" id ="stockCnt" value={{receipt.stockCnt}}>
                    <input type = "text" class = "form-control" id ="stockAvr" value={{receipt.stockAvr}}>
                </div>
            </form>
            <button type = "button" class = "btn btn-primary" id ="receipt-update">등록</button>
            <button type = "button" class = "btn btn-danger" id ="receipt-delete">삭제</button>
            <a href="javascript:history.back();" role = "button" class="btn btn-secondary">취소</a>
        </div>
    </div>
{{>layout/footer}}